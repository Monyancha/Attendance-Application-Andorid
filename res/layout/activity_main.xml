<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jam.MainActivity" 
    android:background="@drawable/image1">

    <Button
        android:id="@+id/Click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/cname"
        android:text="Enter Student" />

    <Button
        android:id="@+id/bdelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bvatt"
        android:layout_alignRight="@+id/bvatt"
        android:layout_below="@+id/bvatt"
        android:text="Delete All Records" />

    <Button
        android:id="@+id/bview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Click"
        android:layout_alignRight="@+id/Click"
        android:layout_below="@+id/Click"
        android:text="View Students" />

    <Button
        android:id="@+id/batt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bview"
        android:layout_alignRight="@+id/bview"
        android:layout_below="@+id/bview"
        android:text="Take Attendence" />

    <Button
        android:id="@+id/bvatt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/batt"
        android:layout_alignRight="@+id/batt"
        android:layout_below="@+id/batt"
        android:text="View Attendence" />

    <TextView
        android:id="@+id/cname"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="#FF0000"
        android:textSize="18dip"
        
        android:text="" />

</RelativeLayout>